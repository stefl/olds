- content_for :title do
  = @title
  = " | The Olds"

.story-header
  %h1.story-full-title= @story.clickbait.reverse.sub(" ",";psbn&").reverse.html_safe
  %h4.story-meta
    - if @story.subject
      = @story.subject + " | "
    = @story.day
    = Date::MONTHNAMES[@story.month]
    = @story.year

.story-container

  .story-full
    
    - if @story.image
      %img.story-image{:src=>@story.image}
    
    
    = @story_body.html_safe